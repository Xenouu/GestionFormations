{%  extends 'base.html.twig' %}

{% block title %}Formation Inscrit{% endblock %}
{% block body %}
    </br>
    {% if (message) %}
        {{ message }}
    {% endif %}
<div class="container" align="center">
<div class="shadow-lg p-3 mb-5 bg-body rounded" align="left">
<table class="table">
    <thead>
    <tr>
        <th scope="col">Nom</th>
        <th scope="col">Prénom</th>
        <th scope="col">Voir les services</th>
    </tr>
  </thead>
  <tbody>
{% for employe in ensEmployes %}
    {% if (employe.statut == 1) %}
        <tr>
        <td>{{ employe.nom }}</td>
        <td>{{ employe.prenom }}</td>
        <td><a class="btn btn-primary" href="{{ path('app_voirEmployeServices', {'id' : employe.id, 'idServiceRetirer' : 0}) }}">Voir</a></td>
        </tr>
    {% endif %}
{% endfor %}
    </tbody>
</table>
</div>
<a class="btn btn-primary" href="{{ path('app_employeAjoutHash') }}">Ajouter Employé</a>
</div>
{% endblock %}