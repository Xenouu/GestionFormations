{% extends 'base.html.twig' %}

{% block title %} Espace Employe {% endblock %}

{% block body %}
    <h1>Espace Employe</h1>
    <div>
    <h2>Liste des formations disponibles<h2>
    {% for formation in ensFormations %}
    Date de début : {{ formation.dateDebut|date("m/d/Y") }}
    Nombre d'heures : {{ formation.nbreHeures }} 
    Département : {{ formation.departement }}
    <a href="{{path('app_inscriptionEmployeFormation', { 'id': formation.id })}}">s'inscrire</a></br>
    <br>
    {% endfor %}
    </div>
    <div>
        <h2>Liste des formations déjà inscrites</h2>
        {% for inscription in ensInscription %}
            Date de début : {{ inscription.formation.dateDebut|date("m/d/Y") }}
            Nombre d'heures : {{ inscription.formation.nbreHeures }} 
            Département : {{ inscription.formation.departement }}
            Etat :  {% if inscription.statut == 'A'%}
                Accepter
                    {% elseif inscription.statut == 'R'%}
                Refuser
                    {% elseif inscription.statut == 'E'%}
                En cours
                {% endif %}
            <br>
        {% endfor %}
    </div>

{% endblock %}